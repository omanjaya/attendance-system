{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:analyze": "npm run build -- --mode analyze",
        "build:report": "npm run build && npx bundlesize",
        "dev": "vite",
        "dev:analyze": "vite --mode analyze",
        "watch": "vite build --watch",
        "preview": "vite preview",
        "analyze": "node scripts/analyze-bundle.cjs",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix",
        "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:unit": "vitest run tests/unit",
        "test:integration": "vitest run tests/integration",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "perf": "npm run analyze && npm run build:report",
        "quality": "npm run lint:check && npm run format:check && npm run test:run && npm run test:e2e",
        "monitor": "node scripts/bundle-analyzer.js",
        "monitor:perf": "npm run build && npm run monitor",
        "quality:report": "npm run test:coverage && npm run lint:check && npm run format:check",
        "optimize": "npm run monitor:perf && npm run quality:report",
        "validate:success": "node scripts/validate-success-criteria.js",
        "validate:all": "npm run optimize && npm run validate:success"
    },
    "dependencies": {
        "@fullcalendar/core": "^6.1.11",
        "@fullcalendar/daygrid": "^6.1.11",
        "@fullcalendar/interaction": "^6.1.11",
        "@fullcalendar/list": "^6.1.17",
        "@fullcalendar/timegrid": "^6.1.11",
        "@fullcalendar/vue3": "^6.1.11",
        "@tabler/core": "^1.0.0-beta20",
        "@tabler/icons": "^2.47.0",
        "@tabler/icons-vue": "^3.34.0",
        "axios": "^1.8.2",
        "chart.js": "^4.5.0",
        "datatables.net": "^1.13.11",
        "datatables.net-dt": "^1.13.11",
        "datatables.net-vue3": "^2.1.2",
        "jquery": "^3.7.1",
        "pinia": "^2.1.7",
        "sweetalert2": "^11.10.5",
        "vue": "^3.4.21",
        "vue-router": "^4.3.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.0",
        "@playwright/test": "^1.53.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/vue": "^8.1.0",
        "@typescript-eslint/eslint-plugin": "^8.35.0",
        "@typescript-eslint/parser": "^8.35.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/compiler-sfc": "^3.4.21",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/test-utils": "^2.4.6",
        "bundlesize": "^0.18.2",
        "concurrently": "^9.0.1",
        "eslint": "^9.30.0",
        "eslint-plugin-vue": "^10.2.0",
        "jsdom": "^26.1.0",
        "laravel-vite-plugin": "^1.2.0",
        "playwright": "^1.53.1",
        "prettier": "^3.6.2",
        "sass": "^1.71.1",
        "terser": "^5.43.1",
        "vite": "^6.2.4",
        "vitest": "^3.2.4",
        "webpack-bundle-analyzer": "^4.10.2"
    }
}
